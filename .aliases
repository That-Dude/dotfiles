#!/usr/bin/env zsh
# ########################################################################## #
#                                /!\ Important /!\                           #
# The file is used to as aliasing all the commands, this file is an for ease #
# of user and not a core file for tooling, and has a dependency to .extra,   #
# therefore, this should always be loader after .extra (preferably last)     #
# ########################################################################## #

# Towared root navigations
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# General Shortcuts 

#alias c="tr -d '\n' | pbcopy" # Trim new lines and copy to clippboard

# Directory listing
alias l="ls -lF ${colorflag}"
alias la="ls -lAF ${colorflag}"
alias lsd="ls -lAF ${colorflag} | grep --color=never '^d'" # List only dirs
alias ls="command ls -lF ${colorflag}"

alias cc="pwd | c"  # copy current directory
alias vc="cd $(pbpaste)"  # change to copied current directory

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

# refresh terminal
alias so="source ~/.zshrc"
alias reload="source ~/.zshrc"

# tmux
alias t=tmux
alias tns='tmux new -s '
alias tls='tmux ls'

# :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: #
#                      =*--  System Specific Aliases --*=                    #
# :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: #

# dotfiles (https://github.com/kalkayan/dotfiles) 
alias dotfiles="/usr/bin/git --git-dir=$HOME/.dotfiles --work-tree=$HOME"

alias g="cd ~/Nextcloud/programming/golang/"
alias b="cd ~/Nextcloud/programming/bash/"
alias p="cd ~/Nextcloud/programming/python/"
alias n="cd ~/Nextcloud/"
alias code="/usr/local/bin/codium"
alias flushdns="sudo killall -HUP mDNSResponder"